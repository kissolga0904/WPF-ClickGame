<Window x:Class="ClickGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClickGame"
        mc:Ignorable="d"
        Title="Game" Height="450" Width="800">
    <Canvas Name="MyCanvas"
            MouseLeftButtonDown="ClickOnCanvas"
            Background="BlanchedAlmond">
        <Label Name="txtScore"
               FontSize="20"
               FontWeight="Bold"
               Content="Score: 0"
               Foreground="Red"/>
        <Label Name="txtLastScore"
               FontSize="20"
               FontWeight="Bold"
               Content="Last Score: 0"
               Foreground="Pink"
               Canvas.Left="200"/>
        <Rectangle Stroke="Black" 
                   Name="healthBar" 
                   Width="350" 
                   Fill="Red" 
                   Height="27" 
                   Canvas.Left="433" 
                   Canvas.Top="10" />
    </Canvas>
</Window>
